                        Designed By <a href="#">HTML Codex</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="fa fa-arrow-up" aria-hidden="true"></i></a>


    <!-- JavaScript Libraries -->
    <!-- Template Javascript -->
    <!-- <script src="js/main.js"></script> -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        var password = document.querySelector("#password");
        var re_password = document.querySelector("#re_password");
        var btn = document.querySelector("#submit");

        function openForm() {
            document.getElementById("updateForm").style.display = "block"; 
        }

        function closeForm() {
            document.getElementById("updateForm").style.display = "none";
        }
        btn.addEventListener("click", function (e) {
            if (password.value != re_password.value) {
                e.preventDefault();
                re_password.setCustomValidity("Confirm Password Is Not Match");
                re_password.checkValidity();
            } else {
                re_password.setCustomValidity("");
            }
        })
    </script>
    <script>
        var a = "@Message";
        if (a != "") {
            document.querySelector(".alert").hidden = false
        }
        setTimeout(function () {
            document.querySelector(".alert").classList.add("animatefadeOut");
        }, 5000)
        setTimeout(function () {
            document.querySelector(".alert").hidden = true
        }, 6250)
    </script>
    <script>
        function openModal(id) {
            $.ajax({
                    type: 'POST',
                    url: "/Member/DetailPayment",
                    data: {id:id},
                    success: function(response) {
                        document.querySelector("#show").innerHTML = response
                    },
            });

            document.getElementById("Modal").style.display = "block";
            document.getElementById("ModalTitle").innerText = "thuan";
        }
        function closeModal() {
            document.getElementById("Modal").style.display = "none";
        }
    </script>
</body>

</html>
