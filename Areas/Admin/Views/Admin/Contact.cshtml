@model List<GiveAID.Models.ModelView.ContactView>
@{
    Layout = "../shared/_LayoutAdmin.cshtml";
}
<section class="section dashboard">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">List Contact</h5>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title of contact</th>
                        <th scope="col">Description</th>
                        <th scope="col">Sender email</th>
                        <th scope="col">Sender's phone</th>
                        <th scope="col">Sent date</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody id="tbdata">

                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <th scope="row">@i</th>
                            <td>@Model[i].body</td>
                            <td>@Model[i].body</td>
                            <td>@Model[i].email</td>
                            <td>@Model[i].phone_number</td>
                            <td>@Model[i].created_at.ToString("dd-MM-yyyy")</td>
                            @if (Model[i].status == 0)
                            {
                                <td><a class="btn btn-outline-primary" href="@Url.Content("~/Admin")@Url.Action("ReplyContact", new {id=Model[i].id})">Reply</a></td>
                            }
                            else
                            {
                                <td style="color:green">Answered</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>