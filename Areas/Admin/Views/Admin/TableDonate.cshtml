@model List<GiveAID.Models.ModelView.DonationView>
@{
    Layout = "../shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">List donate</h5>
                <!-- Table with stripped rows -->
                <table class="table datatable">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Day</th>
                            <th scope="col">Money</th>
                            <th scope="col">philanthropist</th>
                            <th scope="col">purpose of use</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@Model[i].donation_date</td>
                                <td>@Model[i].money</td>
                                <td>@Model[i].mem_name</td>
                                <td>@Model[i].program_name</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- End Table with stripped rows -->
            </div>
        </div>
    </div>
</div>

