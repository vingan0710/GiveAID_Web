
@model List<GiveAID.Models.Member>
@{
    Layout = "../shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">List member</h5>
                <!-- Table with stripped rows -->
                <table class="table datatable">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Email</th>
                            <th scope="col">Start Date</th>
                            <th scope="col">Active</th>

                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@Model[i].mem_name</td>
                                <td>@Model[i].phone_number</td>
                                <td>@Model[i].email</td>
                                <td>@Model[i].created_at</td>
                                @if (Model[i].status == 1)
                                {
                                    <td>
                                        <a class="btn btn-danger" href="@Url.Content("~/Admin")@Url.Action("DisactiveStatus", new {id=Model[i].mem_id})">Disactive</a>
                                    </td>
                                }
                                else if (Model[i].status == 0)
                                {
                                    <td>
                                        <a class="btn btn-success" href="@Url.Content("~/Admin")@Url.Action("ActiveStatus", new {id=Model[i].mem_id})">Restore</a>
                                    </td>
                                }
                            </tr>           
                        }

                    </tbody>
                </table>
                <!-- End Table with stripped rows -->
            </div>
        </div>
    </div>
</div>
